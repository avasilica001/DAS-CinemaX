<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrain1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lp_tv_nohay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay películas disponibles"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/l_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/l_main" />

    <LinearLayout
        android:id="@+id/l_main"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lp_tv_listapeliculas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Películas"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lp_lv_listapeliculas"
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:scrollbarSize="20dp">

        </ListView>

        <Button
            android:id="@+id/lp_b_aniadirpelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir Película" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>